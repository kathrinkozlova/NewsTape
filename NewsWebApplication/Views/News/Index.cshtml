@model IEnumerable<NewsWebApplication.Models.News>

@{
    ViewBag.Title = "List of news";
}

<h2>Список новостей</h2>

<div>
    @Html.ActionLink("Добавить новость", "Create")
    <div style="float: right">
        @Html.ActionLink("Перейти к списку пользователей", "Index", "Users")
    </div>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Text)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Image)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Text)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.IdNews }) <br/>
            @Html.ActionLink("Удалить", "Delete", new { id=item.IdNews })
        </td>
    </tr>
}

</table>
