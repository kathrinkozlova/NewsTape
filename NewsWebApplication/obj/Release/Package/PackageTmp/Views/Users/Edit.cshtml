@model NewsWebApplication.Models.Users

@{
    ViewBag.Title = "Edit";
}
<div style="margin: 0 auto; width: 80%; padding-left: 40px; margin-bottom: -15px;">
    <h2>Изменение роли пользователя</h2>
</div>
<hr style="float: right; width: 100%" />
